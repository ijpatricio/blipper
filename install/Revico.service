[Unit]
Description=Revico Node.js Web Server
After=network.target

[Service]
Type=simple
User=revico
WorkingDirectory=/home/revico/revico
ExecStart=/usr/bin/node server.js
Restart=always
RestartSec=10
Environment=NODE_ENV=production
StandardOutput=journal
StandardError=journal
SyslogIdentifier=revico

[Install]
WantedBy=multi-user.target
